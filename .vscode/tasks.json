{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto-Fix All",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "fix"
      ],
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Lint Check",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "lint"
      ],
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "format"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}